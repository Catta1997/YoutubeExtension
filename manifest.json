{
  "manifest_version": 3,
  "name": "YouTube Chat Highlighter",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/live_chat*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}